<div class="container p-4">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card" style="background-color: #FFEDED">
                <div class="card-header">
                    <h4 class="card-title text-center">llena el formulario</h4>
                </div>
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Title" value="{{link.title}}" autofocus required >
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="url" class="form-control" name="url" placeholder="URL" value="{{link.url}}" required>
                        </div>
                        <br>
                        <div class="form-group">
                            <textarea class="form-control" name="description" rows="3" placeholder="Description" required >{{link.description}}</textarea>
                        </div>
                        <br>
                        <button class="w-100 btn btn-success" name=""type="submit" style="background-color: #B3541E">save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>